        <Label Content="Version 1.0" Height="28" HorizontalAlignment="Left" Margin="12,296,0,0" Name="Label4" VerticalAlignment="Top" />
        <Label Content="Language / Idioma:" HorizontalAlignment="Left" Margin="107,40,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="EnglishRB" Content="English" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="115,66,0,0" IsChecked="True"/>
        <RadioButton x:Name="SpanishRB" Content="Español" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="115,86,0,0"/>
